<header class="fixed top-0 left-0 w-full py-4 px-6 flex justify-between items-center z-50">
  <div id="logo" class="text-2xl font-bold z-50">Mi Portfolio</div>


  <nav class="hidden md:flex">
    <ul class="flex gap-6 items-center">
      <li class="desktop-nav-link"><a href="#about" class="hover:text-gray-400 transition-colors">Sobre Mí</a></li>
      <li class="desktop-nav-link"><a href="#projects" class="hover:text-gray-400 transition-colors">Proyectos</a></li>
      <li class="desktop-nav-link"><a href="#contact" class="hover:text-gray-400 transition-colors">Contacto</a></li>
    </ul>
  </nav>

  
  <button id="menu-toggle" class="md:hidden w-8 h-8 flex flex-col justify-center items-center gap-1.5 z-50">
    <span class="line top-line w-6 h-0.5 bg-white block rounded-full"></span>
    <span class="line middle-line w-6 h-0.5 bg-white block rounded-full"></span>
    <span class="line bottom-line w-6 h-0.5 bg-white block rounded-full"></span>
  </button>

  
  <div id="mobile-menu" class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-90 backdrop-blur-sm flex flex-col justify-center items-center invisible">
    <nav>
      <ul class="flex flex-col gap-8 text-center">
        <li><a href="#about" class="mobile-nav-link text-3xl font-bold">Sobre Mí</a></li>
        <li><a href="#projects" class="mobile-nav-link text-3xl font-bold">Proyectos</a></li>
        <li><a href="#contact" class="mobile-nav-link text-3xl font-bold">Contacto</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  
  .line {
    transform-origin: center;
  }
</style>

<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    
    if (window.innerWidth >= 768) { 
      gsap.from(".desktop-nav-link", {
          duration: 0.5,
          opacity: 0,
          y: -20,
          stagger: 0.2,
          ease: "power2.out"
      });
    }

    gsap.from("#logo", {
        duration: 0.5,
        opacity: 0,
        y: -20,
        ease: "power2.out",
        delay: 0.1
    });

    
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
    const lines = menuToggle ? menuToggle.querySelectorAll('.line') : [];

    gsap.set(mobileMenu, { autoAlpha: 0 });

    const menuTimeline = gsap.timeline({ paused: true, reversed: true });

    menuTimeline
      .to(mobileMenu, { autoAlpha: 1, duration: 0.3, ease: "power1.inOut" })
      .from(mobileNavLinks, { autoAlpha: 0, y: 20, stagger: 0.1, duration: 0.3 }, "-=0.2")
      .to(lines[0], { rotate: 45, y: 7, duration: 0.3, ease: "power1.inOut" }, 0)
      .to(lines[1], { opacity: 0, duration: 0.3, ease: "power1.inOut" }, 0)
      .to(lines[2], { rotate: -45, y: -7, duration: 0.3, ease: "power1.inOut" }, 0);

    if (menuToggle) {
      menuToggle.addEventListener('click', () => {
        menuTimeline.reversed() ? menuTimeline.play() : menuTimeline.reverse();
      });
    }

    mobileNavLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (!menuTimeline.reversed()) {
          menuTimeline.reverse();
        }
      });
    });
  });
</script>