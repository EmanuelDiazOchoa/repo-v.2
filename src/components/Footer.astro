---
const currentYear = new Date().getFullYear();
---

<footer id="contact" class="w-full pt-16 pb-8 text-gray-400 border-t border-gray-800 overflow-hidden">
  <div class="max-w-3xl mx-auto px-6 text-center">
    
    
    <div class="footer-main-content">
      <h3 class="text-4xl font-bold mb-8 text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500">Hablemos</h3>
      <p class="mb-6 max-w-md mx-auto">
        Estoy disponible para oportunidades freelance o un rol a tiempo completo. 
        No dudes en contactarme.
      </p>
      
      <div class="flex justify-center gap-6 mb-12">
        <a href="https://github.com/EmanuelDiazOchoa" target="_blank" class="transition hover:scale-110 hover:text-white duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16" class="bi bi-github">
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
          </svg>
        </a>
        <a href="https://www.linkedin.com/in/hector-emanuel-diaz-ochoa/" target="_blank" class="transition hover:scale-110 hover:text-white duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16" class="bi bi-linkedin">
            <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"/>
          </svg>
        </a>
      </div>
    </div>

    
    <div class="footer-copyright">
      <hr class="border-gray-800 mb-6">
      <p class="text-sm text-gray-500">&copy; {currentYear} Hector Emanuel Diaz Ochoa. Todos los derechos reservados.</p>
    </div>

  </div>
</footer>

<style>
  .footer-main-content, .footer-copyright {
    visibility: hidden;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const trigger = "#contact";

  gsap.from(".footer-main-content", {
    scrollTrigger: {
      trigger: trigger,
      start: "top 90%",
      toggleActions: "play none none none",
      once: true,
    },
    duration: 1,
    autoAlpha: 0,
    y: 50,
    ease: "power2.out",
  });

  gsap.from(".footer-copyright", {
    scrollTrigger: {
      trigger: trigger,
      start: "top 90%",
      toggleActions: "play none none none",
      once: true,
    },
    duration: 1,
    delay: 0.3, 
    autoAlpha: 0,
    y: 50,
    ease: "power2.out",
  });
</script>