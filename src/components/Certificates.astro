<section id="certificates" class="w-full max-w-3xl mx-auto text-center py-28">
  <h2 class="text-4xl font-bold mb-8 text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500">Certificados</h2>
  <div class="max-w-4xl mx-auto">
    <div id="cards-grid" class="grid grid-cols-1 md:grid-cols-2 gap-8 initial-state">
      <div class="certificate-card p-6 rounded-lg" style="background: radial-gradient(70% 55% at 50% 50%, #2a5d77 0%, #184058 18%, #0f2a43 34%, #0a1b30 50%, #071226 66%, #040d1c 80%, #020814 92%, #01040d 97%, #000309 100%), radial-gradient(160% 130% at 10% 10%, rgba(0,0,0,0) 38%, #000309 76%, #000208 100%), radial-gradient(160% 130% at 90% 90%, rgba(0,0,0,0) 38%, #000309 76%, #000208 100%)">
        <h3 class="text-xl font-bold mb-4">CoderHouse - Carrera de Desarrollo Frontend</h3>
        <ul class="space-y-2">
          <li>Desarrollador Web: <a href="../../public/img/DesarrolloWeb.png" target="_blank" class="text-blue-400 hover:underline">Ver Certificado</a></li>
          <li>JavaScript: <a href="../../public/img/JavaScript.png" target="_blank" class="text-blue-400 hover:underline">Ver Certificado</a></li>
          <li>React Js: <a href="../../public/img/ReactJs.jpg" target="_blank" class="text-blue-400 hover:underline">Ver Certificado</a></li>
          <li>Desarrollador Frontend: <a href="../../public/img/Carreradesarrolladorfrontend.jpg" target="_blank" class="text-blue-400 hover:underline">Ver Certificado</a></li>
        </ul>
      </div>
      <div class="certificate-card p-6 rounded-lg" style="background: radial-gradient(70% 55% at 50% 50%, #2a5d77 0%, #184058 18%, #0f2a43 34%, #0a1b30 50%, #071226 66%, #040d1c 80%, #020814 92%, #01040d 97%, #000309 100%), radial-gradient(160% 130% at 10% 10%, rgba(0,0,0,0) 38%, #000309 76%, #000208 100%), radial-gradient(160% 130% at 90% 90%, rgba(0,0,0,0) 38%, #000309 76%, #000208 100%)">
        <h3 class="text-xl font-bold mb-4">CoderHouse - Desarrollo de Aplicaciones</h3>
        <ul class="space-y-2">
          <li>Desarrollador de Aplicaciones: <a href="../../public/img/Desarrollodeaplicaciones.png" target="_blank" class="text-blue-400 hover:underline">Ver Certificado</a></li>
          <li>Carrera de Desarrollo de Aplicaciones: <a href="../../public/img/Desarrollodeaplicaciones.png" target="_blank" class="text-blue-400 hover:underline">Ver Certificado</a></li>
        </ul>
      </div>
    </div>
    <p class="text-center mt-8 text-gray-400">
      
    </p>
  </div>
</section>

<style>
  #cards-grid.initial-state .certificate-card {
    opacity: 0;
    transform: scale(0.5) translateY(100px);
  }
</style>

<script>
  import gsap from "gsap";
  import { Flip } from "gsap/Flip";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(Flip, ScrollTrigger);

  const grid = document.querySelector("#cards-grid");
  const cards = gsap.utils.toArray(".certificate-card") as Element[];

  ScrollTrigger.create({
    trigger: grid,
    start: "top 80%",
    onEnter: () => {
      if (grid) {
        const state = Flip.getState(cards);
        
        grid.classList.remove("initial-state");

        Flip.from(state, {
          duration: 0.8,
          stagger: 0.1,
          ease: "power2.out",
          scale: true, 
        });
      }
    },
    once: true // Only run the animation once
  });
</script>